config debug on;

init std;

declare true@std = (lambda (t f) (
    lazy t
));

declare false@std = (lambda (t f) (
    lazy f
));

declare if@std = (lambda --lazy (b t f) (
    (lazy b) t f
));

define --lazy (make-lazy@std expr) expr;

print --expr (true@std (make-lazy@std 1) (make-lazy@std (/ 1 0)));